<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_blok_mesin_produksi_tree" model="ir.ui.view">
            <field name="name">blok.mesin.produksi.tree</field>
            <field name="model">blok.mesin.produksi</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Daftar Mesin Produksi">
                    <field name="nama_blok"/>
                    <field name="total_mesin"/>
                </tree>
            </field>
        </record>
		<record id="view_blok_mesin_produksi_form" model="ir.ui.view">
			<field name="name">blok.mesin.produksi.form</field>
			<field name="model">blok.mesin.produksi</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<field name="nama_blok"/>
						<field name="total_mesin"/>
					</sheet>
				</form>
			</field>
		</record>
    </data>
</odoo>
