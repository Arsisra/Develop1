<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="snap_qc_pop_up_form" model="ir.ui.view">
            <field name="name">snap.qc.pop.up.form</field>
            <field name="model">snap.qc.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Header Pengecekkan">
                    <sheet>
                        <div class="row">
                            <div class="col-md-6"> 
                                <!-- <button type="object" class="btn btn-outline-info" name="action_increment_deret">
                                    <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> Line Selanjutnya
                                </button>                                 -->
                            </div>
                            <div class="col-md-8">
                                <div class="radio-mesin">
                                    <group name="layout_mesin" string="Layout Mesin">
                                        <field name="mesin_produksi_id" domain="[('deret', '=',parent.deret_value)]" options="{'horizontal': True}" widget="radio" class="radio-mesin" id="radio-mesin"/>                                        
                                    </group>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <group name="kerusakkan" string="Pilih Kerusakkan">
                                    <field name="putus_lusi" widget="boolean_toggle"/>
                                    <field name="putus_pakan" widget="boolean_toggle"/>
                                    <field name="bendera_merah" widget="boolean_toggle"/>
                                    <field name="ambrol" widget="boolean_toggle"/>
                                    <field name="dedel" widget="boolean_toggle"/>
                                </group>
                                <group>
                                    <field name="hb" widget="boolean_toggle"/>
                                    <field name="naik_beam" widget="boolean_toggle"/>
                                    <field name="oh" widget="boolean_toggle"/>
                                    <field name="preventif" widget="boolean_toggle"/>
                                </group>                                
                                <group>
                                    <field name="lain_lain" string="Keterangan/Lain Lain" placeholder="Isi Keterangan Disini" style="text-align:center;" class="keterangan"/>
                                </group> 
                                <!-- Custome footer -->
                                <!-- <footer t-if="renderFooter" class="modal-footer">
                                    <field name="button" widget="qc_widget" options="{'call_method': 'simpan_data_snap'}"/>
                                    <button class="btn btn-danger" data-dismiss="modal" tabindex="-1"><i class="fa fa-backward" aria-hidden="true"></i> Kembali</button>    
                                </footer> -->
                            </div>
                        </div>
                    </sheet>
                </form> 
            </field>
        </record> 
        <template id="popup_form_backend" name="popup form asset" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/css" href="/qc_shuttle/static/src/css/radio_custom.css"/>
                <link rel="stylesheet" type="text/css" href="/qc_shuttle/static/src/css/custom_style.css"/>
            </xpath>
        </template>
    </data>
</odoo>
